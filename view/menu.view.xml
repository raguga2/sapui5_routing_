<mvc:View 
  controllerName="namespace.controller.menu"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="Меню">
		<!-- Биндим список на свойство модели, в котором хранится массив пунктов меню -->
		<List
			items="{main>/mainMenu}"
			>
			<StandardListItem
				title="{main>title}"
				description="{main>ProductId}"
				type='Active'
				press="omMenuItemPress"/>
		</List>
	</Page>
</mvc:View>